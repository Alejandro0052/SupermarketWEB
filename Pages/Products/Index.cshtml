@page
@model SupermarketWEB.Pages.Products.IndexModel
@{
	ViewData["Title"] = "Index Productos";
}
<h1>Index Products</h1>
<p>
	<a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Products[0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Products[0].Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Products[0].Stock)
			</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Products)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Price)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Stock)
				</td>
				<td>
					<a a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
					<a a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
				</td>

			</tr>
		}
	</tbody>
</table>
