@page
@model SupermarketWEB.Pages.Products.EditModel
@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-asp-validation-summary="Model Only" class="text-danger"></div>
			<input type="hidden" asp-for="Product.Id" />
			<div class="form-group">
				<label asp-for="Product.Name" class="control-label"></label>
				<input asp-for="Product.Name" class="form-control"></input>
				<span asp-asp-validation-for="Product.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Product.Price" class="control-label"></label>
				<input asp-for="Product.Price" class="form-control"></input>
				<span asp-asp-validation-for="Product.Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Product.Stock" class="control-label"></label>
				<input asp-for="Product.Stock" class="form-control"></input>
				<span asp-asp-validation-for="Product.Stock" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-success" />
				<a asp-asp-page="./Index" class="btn btn-primary">Back to list</a>
			</div>
		</form>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}